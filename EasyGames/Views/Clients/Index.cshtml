@model IEnumerable<EasyGames.Models.Clients>
 

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/Content/bootstrap-table.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap-table/bootstrap-table.min.js"></script>
    <script src="~/Scripts/bootstrap-table/extensions/filter/bootstrap-table-filter.min.js"></script>
    <script src="~/Scripts/bootstrap-table/extensions/editable/bootstrap-table-editable.min.js"></script>
    <script src="~/Scripts/bootstrap-table/extensions/export/bootstrap-table-export.min.js"></script>
</head>
<body>

    <div class="container">
        <h2>List of clients</h2>
        <p>
            @Html.ActionLink("Add Client", "Create")

        </p>
        <input class="form-control" id="myInput" type="text" placeholder="Search..">
        <br>
        <table id="example" class="table table-bordered table-hover"
               data-toggle="table"
               data-height="500"
               data-search="true"
               data-pagination="true"
               data-page-list="[10, 100, 250]"
               style="font-size: small">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Balance</th>
                    <th>Options</th>
                    <th>Options</th>
                </tr>
            </thead>
            @foreach (var client in Model)
            {
                <tr>
                    <td>@client.Name @client.Surname</td>
                    <td>@client.ClientBalance</td>
                    <td><a href="@Url.Action("Transactions", new { clientId = client.ClientID })">View Transactions</a></td>
                    <td><a href="@Url.Action("AddTransaction", "Transactions", new { clientId = client.ClientID })">Add New Transaction</a></td>

                </tr>
            }

        </table>

        <p>Note that we start the search in tbody, to prevent filtering the table headers.</p>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#example').dataTable({

            });
        })
    </script>

</body>
</html>





